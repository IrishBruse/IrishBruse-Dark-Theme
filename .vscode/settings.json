{
    "json.schemas": [
        {
            "fileMatch": [
                "*.jsonc",
            ],
            "schema": {
                "allowTrailingCommas": true
            }
        }
    ],
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/themes": true,
        "src/tokenColors/typescript.js": true,
        "src/tokenColors/html.js": true,
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "samples/": true,
        "**/gen_*.js": true
    }
}
